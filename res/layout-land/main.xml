<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#336699" >

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TopImage"
            android:src="@drawable/oncidium" />

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="fill_parent" android:layout_gravity="center" android:id="@+id/lin1"
                  android:weightSum="3" android:layout_marginBottom="5dp" android:background="#336699">
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wyświelt listę kwiatów z bazy"
                android:id="@+id/ButtonWyswietl" android:layout_gravity="center" android:layout_weight="1"
                android:background="#000033" android:textColor="#ffffff" android:textSize="20dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wyszukaj w bazie"
                android:id="@+id/ButtonWyszukaj" android:layout_gravity="center" android:layout_weight="1"
                android:textColor="#ffffff" android:background="#000033" android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" android:textSize="20dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wstaw rekord do bazy"
                android:id="@+id/ButtonWstaw" android:layout_gravity="center" android:singleLine="false"
                android:layout_weight="1" android:textColor="#ffffff" android:background="#000033" android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>

