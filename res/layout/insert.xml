<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#336699">

    <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/imageView"
               android:src="@drawable/oncidium" android:adjustViewBounds="true"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EditGatunek1"
            android:layout_gravity="center"
            android:hint="gatunek" android:layout_marginTop="5dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EditRodzaj1"
            android:layout_gravity="center"
            android:hint="rodzaj"/>

    <EditText android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/EditKolor1"
              android:layout_gravity="center_vertical"
              android:hint="kolor"/>
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SpinnerStanowisko1"

            android:spinnerMode="dropdown"/>

    <Spinner android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:id="@+id/SpinnerTemp1"

             android:spinnerMode="dropdown"/>

    <Spinner android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:id="@+id/SpinnerPokroj1"

             android:spinnerMode="dropdown"/>

    <Spinner android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:id="@+id/SpinnerRegion1"
             android:spinnerMode="dropdown"/>

    <Spinner android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:id="@+id/SpinnerTyp1"
             android:spinnerMode="dropdown"/>


    <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Wstaw rekord do bazy"
            android:id="@+id/buttonInsert"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:background="#000033"
            android:textSize="20dp"/>


</LinearLayout>